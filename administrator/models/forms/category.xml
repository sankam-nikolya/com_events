<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="title" 
			type="text" 
			filter="safehtml" 
			required="true" 
			class="span12"
			label="COM_EVENTS_FORM_LBL_CATEGORY_TITLE" 
			description="COM_EVENTS_FORM_DESC_CATEGORY_TITLE" 
			hint="COM_EVENTS_FORM_LBL_CATEGORY_TITLE"/>
		<field name="color" 
			type="color"
			default="#1b63a2" 
			filter="safehtml" 
			required="true" 
			label="COM_EVENTS_FORM_LBL_CATEGORY_COLOR" 
			description="COM_EVENTS_FORM_DESC_CATEGORY_COLOR" 
			hint="COM_EVENTS_FORM_LBL_CATEGORY_COLOR"/>
		<field name="text_color" 
			type="color"
			default="#ffffff" 
			filter="safehtml" 
			required="true" 
			label="COM_EVENTS_FORM_LBL_CATEGORY_TEXT_COLOR" 
			description="COM_EVENTS_FORM_DESC_CATEGORY_TEXT_COLOR" 
			hint="COM_EVENTS_FORM_LBL_CATEGORY_TEXT_COLOR"/>
		<field name="state" 
			default="1" 
			type="list" 
			label="JSTATUS" 
			description="JFIELD_PUBLISHED_DESC" 
			class="inputbox"
			 size="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="description" 
			type="editor" 
			filter="safehtml" 
			label="COM_EVENTS_FORM_LBL_CATEGORY_DESCRIPTION" 
			description="COM_EVENTS_FORM_DESC_CATEGORY_DESCRIPTION" 
			hint="COM_EVENTS_FORM_LBL_CATEGORY_DESCRIPTION"/>
		<field name="id" 
			type="text" 
			readonly="true" 
			class="readonly" 
			default="0" 
			description="JGLOBAL_FIELD_ID_DESC"/>
		<field name="ordering"/>
		<field name="checked_out" 
			type="hidden" 
			filter="unset"/>
		<field name="checked_out_time" 
			default="0000-00-00 00:00:00" 
			type="hidden" 
			filter="unset"/>
		<field name="created_by" 
			type="createdby" 
			default="0" 
			label="COM_EVENTS_FORM_LBL_CATEGORY_CREATED_BY" 
			description="COM_EVENTS_FORM_DESC_CATEGORY_CREATED_BY" 
			hidden="true" 
			hint="COM_EVENTS_FORM_LBL_CATEGORY_CREATED_BY"/>
		<field name="modified_by" 
			type="modifiedby" 
			default="0" 
			label="COM_EVENTS_FORM_LBL_CATEGORY_MODIFIED_BY" 
			description="COM_EVENTS_FORM_DESC_CATEGORY_MODIFIED_BY" 
			hidden="true" 
			hint="COM_EVENTS_FORM_LBL_CATEGORY_MODIFIED_BY"/>
		<field name="version_note" 
			type="text" 
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" 
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC" 
			class="inputbox" 
			size="45" 
			labelclass="control-label"/>
	</fieldset>
</form>
